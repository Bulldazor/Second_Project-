<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@android:color/black"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rr.favouritesite.Main2Activity">

    <Button
        android:text="Restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/platforkandknife"
        android:layout_centerVertical="true"
        android:textColor="@android:color/holo_blue_light"
        android:background="@drawable/round_corner"
        android:layout_alignRight="@+id/buttonSp"
        android:layout_alignEnd="@+id/buttonSp"
        android:id="@+id/buttonRes" />

    <Button
        android:text="Blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBlog"
        android:drawableLeft="@drawable/bloggerlogo"
        android:background="@drawable/round_corner"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/buttonNews"
        android:layout_alignLeft="@+id/buttonNews"
        android:layout_alignStart="@+id/buttonNews"
        android:layout_marginTop="34dp" />

    <Button
        android:text="Newspaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corner"
        android:drawableLeft="@drawable/nn"
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/buttonNews"
        android:layout_below="@+id/buttonRes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/cricket"
        android:id="@+id/buttonSp"
        android:background="@drawable/round_corner"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/buttonRes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Welcome!!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="61dp"
        android:id="@+id/textView4" />
</RelativeLayout>
